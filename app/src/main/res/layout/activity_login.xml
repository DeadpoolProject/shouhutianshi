<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eaebec" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@color/card_lv_blue" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="120dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/loginTv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/colorWhite"
            android:textSize="17.5dp" />

        <TextView
            android:id="@+id/button_register"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/colorWhite"
            android:textSize="17.5dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/redline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/loginRedline"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:visibility="visible" />

        <TextView
            android:id="@+id/registerRedline"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/redline"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/rect_whitee"
        android:elevation="4dp"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="28dp"
        android:paddingRight="28dp"
        android:paddingTop="22dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_account"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="手机"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:nextFocusDown="@+id/accountPassword"
                android:nextFocusForward="@+id/accountPassword"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#50000000"
                android:textSize="16dp"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <liangkang.com.shouhutianshi.utils.TimeButton
                android:id="@+id/sendCodeTv"
                android:layout_width="86dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:background="@drawable/transparent"
                android:gravity="center"
                android:text="发送验证码"
                android:textColor="@color/grey"
                android:textSize="15dp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#50000000"
                android:textSize="16dp"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <EditText
                android:id="@+id/login_codeet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="验证码"
                android:inputType="number"
                android:maxLength="8"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#50000000"
                android:textSize="16dp"
                android:visibility="gone"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <EditText
                android:id="@+id/login_setpwdet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="设置密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#50000000"
                android:textSize="16dp"
                android:visibility="gone"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <TextView
                android:id="@+id/button_passwordForget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="6dp"
                android:text="忘记密码?"
                android:textColor="@color/grey"
                android:textSize="14.5dp"
                android:visibility="visible"
                tools:ignore="HardcodedText" />
        </RelativeLayout>


        <TextView
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/item_clickable_bg"
            android:elevation="1dp"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:id="@+id/userAgreementLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="12dp"
            android:visibility="gone">

            <CheckBox
                android:id="@+id/readCb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-12dp"
                android:checked="true"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:text=""
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-2dp"
                android:text="我已阅读并同意"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/userAgreementTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:text="用户协议"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="和"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/exonerateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:text="免责声明"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:background="#DEE0E1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@color/colorWhite"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="您还可以选择"
                android:textColor="#DEE0E1"
                android:textSize="14dp" />
        </RelativeLayout>


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="gone">


            <ImageView
                android:id="@+id/alpay_login"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@mipmap/alpay_login_icon" />

            <ImageView
                android:id="@+id/sina_login"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@mipmap/sina_login_icon" />

            <ImageView
                android:id="@+id/wechat_login"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@mipmap/wechat_login_icon" />

        </LinearLayout>

    </LinearLayout>

    <include
        layout="@layout/universal_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


